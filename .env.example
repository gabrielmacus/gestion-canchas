# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================

# Entorno de ejecución (development/production)
ENVIRONMENT=development

# Origen permitido para CORS
ALLOWED_ORIGIN=http://localhost:3000

# ============================================
# CONFIGURACIÓN DE DOCUMENTACIÓN SWAGGER
# ============================================

# Credenciales para acceso a Swagger en producción
# Cambiar estos valores por credenciales seguras en producción
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=admin123

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================

# URL de conexión a la base de datos
DATABASE_URL=postgresql://usuario:password@localhost:5432/gestion_canchas

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================

# Puerto del servidor API
PORT=8000

# Host del servidor
HOST=0.0.0.0

# ============================================
# CONFIGURACIÓN DE LOGS
# ============================================

# Nivel de logging (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================

# Clave secreta para JWT (generar una nueva en producción)
SECRET_KEY=tu-clave-secreta-muy-segura-cambiar-en-produccion

# ============================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ============================================

# Configuración de email para notificaciones
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-password-de-aplicacion

# Email del administrador del sistema
ADMIN_EMAIL=admin@gestion-canchas.com

# ============================================
# CONFIGURACIÓN DE MONITOREO
# ============================================

# Habilitar métricas y monitoreo
ENABLE_METRICS=true

# URL de servicio de métricas (opcional)
METRICS_URL=http://localhost:9090